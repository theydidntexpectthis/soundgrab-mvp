{
  "name": "soundgrab",
  "version": "1.0.0",
  "description": "A full-stack music search and download application",
  "main": "server/prod-server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "node build.js",
    "build:client": "cd client && npm run build",
    "build:server": "tsc --project server/tsconfig.json",
    "start": "node server/prod-server.js",
    "clean": "rm -rf client/dist server/dist",
    "deploy": "fly deploy",
    "deploy:logs": "fly logs",
    "deploy:status": "fly status"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "express": "^4.18.2",
    "genius-lyrics-api": "^3.2.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.17.50",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.0.2"
  }
}
